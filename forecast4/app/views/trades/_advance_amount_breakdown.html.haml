#advance-amount-breakdown.modal{"aria-labelledby" => "myModalLabel", :role => "dialog", :tabindex => "-1"}
  .modal-dialog{:role => "document"}
    .modal-content
      .modal-header
        %button.close{"aria-label" => "Close", "data-dismiss" => "modal", :type => "button"}
          %span{"aria-hidden" => "true"} &times;
        %h4#myModalLabel.modal-title Advance Amount Breakdown
      .modal-body
        .row
          .col-md-12.trade-summary
            .headers
              .row
                .col-xs-2
                  Inv #
                .col-xs-3
                  Face Value
                .col-xs-2
                  Rating
                .col-xs-2
                  \%
                .col-xs-2
                  Advance Amount

            .fees
              - @trade.invoices.each do |invoice|
                .row.fee
                  .col-xs-2
                    = invoice.invoice_no
                  .col-xs-3
                    = number_to_currency(invoice.face_value, precision: 0)
                  .col-xs-2
                    = invoice.rating_value
                  .col-xs-2
                    = "#{number_to_percentage((invoice.rating.advance_amount * 100), precision: 0)}"
                  .col-xs-2
                    = number_to_currency(invoice.advance_amount_in_dollars, precision: 0)

      .modal-footer
        .row
          .col-md-4.col-md-offset-5
            %strong
              Total Advance Amount
          .col-md-3.text-left
            %strong
              = number_to_currency(@trade.advance_amount, precision: 0)
